<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - StumpScore</title>
    <!-- Syncfusion ASP.NET MVC controls styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/25.2.3/fluent.css" />
    <!-- Syncfusion ASP.NET MVC controls scripts -->
    <script src="https://cdn.syncfusion.com/ej2/25.2.3/dist/ej2.min.js"></script>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("StumpScore", "Index", "Home", new { area = "Admin" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Players", "Index", "Player", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Teams", "Index", "Team", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Tournaments", "Index", "Tournament", new { area = "Admin" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Matches", "Index", "Match", new { area = "Admin" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>
    </nav>
    @RenderBody()
    @Html.EJS().ScriptManager()
    @RenderSection("scripts", required: false)


    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var syncfusionAd = document.querySelector('div[style*="position: fixed"][style*="top: 10px"][style*="left: 10px"][style*="right: 10px"][style*="z-index: 999999999"]');
            if (syncfusionAd) {
                syncfusionAd.remove();
            }
        });
    </script>
</body>
</html>
